<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="horizontal"
    android:padding="5dp"
    tools:context="com.fyp.faaiz.ets.tabs.employee.EmployeesTabsFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eee"
            android:padding="5dp">

            <ImageView
                android:id="@+id/employee_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="0.2"
                android:src="@drawable/employee"
                android:tint="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/employee_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faaiz Hussain Zaidi"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/employee_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="@string/lorem"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/timer_employee"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="7dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/timer"
                        android:tint="@color/black" />

                    <ImageView
                        android:id="@+id/detail_employee"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="7dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/list"
                        android:tint="@color/black" />

                    <ImageView
                        android:id="@+id/detail_location"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="7dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/location"
                        android:tint="@color/black" />

                    <ImageView
                        android:id="@+id/delete_employee"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="7dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_discard"
                        android:tint="@color/black" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
