<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@color/background"
    tools:context="com.fyp.faaiz.ets.tabs.employee.EmployeesTabsFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eee"
            android:padding="5dp">

            <ImageView
                android:id="@+id/employee_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="0.2"
                android:src="@drawable/employee"
                android:tint="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/employee_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faaiz Hussain Zaidi"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:paddingLeft="5dp"
                    android:id="@+id/employee_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lorem"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/delete_list_view"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="7dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_discard"
                    android:tint="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/add_list_view"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="7dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_make_copy"
                    android:tint="@color/colorPrimary" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
